<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="model"
            type="com.example.layoutdesign.Model" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
   <RelativeLayout
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       >

       <fragment
           android:id="@+id/nav_host_fragment"
           android:name="androidx.navigation.fragment.NavHostFragment"
           android:layout_width="0dp"
           android:layout_height="0dp"
           app:defaultNavHost="true"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:navGraph="@navigation/nav_graph" />
       <ImageView
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:id="@+id/img1"
           android:src="@{model.img4}"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/txt1"
           android:text="@{model.txt1}"
           android:layout_toRightOf="@+id/img1"
           android:layout_marginLeft="20dp"
           android:textStyle="italic"
           />

       <View
           android:layout_below="@id/img1"
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background=" #808080"
           android:id="@+id/view1"
           />
       <HorizontalScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/img1"
           android:id="@+id/z1">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"

               >
       <com.mikhaellopez.circularimageview.CircularImageView
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:src="@{model.img1}"
           android:id="@+id/a1"
           />
           <com.mikhaellopez.circularimageview.CircularImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@{model.img1}"
               android:id="@+id/a3"
               />
           <com.mikhaellopez.circularimageview.CircularImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@{model.img1}"
               android:id="@+id/a4"
               />
           <com.mikhaellopez.circularimageview.CircularImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@{model.img1}"
               android:id="@+id/a5"
               />
           <com.mikhaellopez.circularimageview.CircularImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@{model.img1}"
               android:id="@+id/a6"
               />
           <com.mikhaellopez.circularimageview.CircularImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@{model.img1}"
               android:id="@+id/a7"
               />
           <com.mikhaellopez.circularimageview.CircularImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@{model.img1}"
               android:id="@+id/a8"
               />
           <com.mikhaellopez.circularimageview.CircularImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@{model.img1}"
               android:id="@+id/a9"
               />
           <com.mikhaellopez.circularimageview.CircularImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@{model.img1}"
               android:id="@+id/a10"
               />
           <com.mikhaellopez.circularimageview.CircularImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@{model.img1}"
               android:id="@+id/a11"
               />
           <com.mikhaellopez.circularimageview.CircularImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@{model.img1}"
               android:id="@+id/a12"
               />
           <com.mikhaellopez.circularimageview.CircularImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@{model.img1}"
               android:id="@+id/a13"
               />
           </LinearLayout>

       </HorizontalScrollView>

       <View
           android:layout_below="@+id/z1"
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background=" #808080"
           android:id="@+id/view4"
           tools:ignore="NotSibling" />
       <com.mikhaellopez.circularimageview.CircularImageView
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:src="@{model.img1}"
           android:id="@+id/c5"
           android:layout_below="@+id/view4"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@{model.txt2}"
           android:id="@+id/txt6"
          android:layout_toRightOf="@+id/c5"
           android:textSize="20dp"
           android:layout_below="@+id/view4"
           />
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/img3"
           android:src="@{model.img1}"
           android:layout_below="@+id/c5"
           android:scaleType="fitStart"
           android:adjustViewBounds="true"
          />
       <com.mikhaellopez.circularimageview.CircularImageView
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:src="@{model.img2}"
           android:id="@+id/c6"
           android:layout_below="@+id/img3"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@{model.txt3}"
           android:id="@+id/txt7"
           android:layout_toRightOf="@+id/c6"
           android:textSize="20dp"
           android:layout_below="@+id/img3"
           />
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/img4"
           android:src="@{model.img2}"
           android:layout_below="@+id/c6"
           android:scaleType="fitStart"
           android:adjustViewBounds="true"
           />
       <com.mikhaellopez.circularimageview.CircularImageView
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:src="@{model.img3}"
           android:id="@+id/c7"
           android:layout_below="@+id/img4"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@{model.txt4}"
           android:id="@+id/txt8"
           android:layout_toRightOf="@+id/c6"
           android:textSize="20dp"
           android:layout_below="@+id/img4"
           />
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/img5"
           android:src="@{model.img3}"
           android:layout_below="@+id/c7"
           android:scaleType="fitStart"
           android:adjustViewBounds="true"
           />



   </RelativeLayout>

    </ScrollView>


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginEnd="0dp"

            android:layout_marginStart="0dp"
            android:fitsSystemWindows="true"
            app:menu="@menu/bottom_nav_menu"
            android:background="@color/white"
            android:id="@+id/bottom_nav_view"
            app:labelVisibilityMode="labeled"
            android:layout_alignParentBottom="true"

            app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"

            />
    </RelativeLayout>
</layout>